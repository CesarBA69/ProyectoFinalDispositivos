<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDetailClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente:" />

        <TextView
            android:id="@+id/tvDetailPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:" />

        <TextView
            android:id="@+id/tvDetailService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio:" />

        <!-- ✅ NUEVO -->
        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:" />

        <!-- ✅ NUEVO -->
        <TextView
            android:id="@+id/tvDetailProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prestador:" />

        <TextView
            android:id="@+id/tvDetailBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sucursal:" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:" />

        <TextView
            android:id="@+id/tvDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:" />

        <TextView
            android:id="@+id/tvDetailNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas:"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>

